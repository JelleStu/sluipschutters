<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.jellestukstette.sluipschutterssoundboard.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnHeeHitler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorLightBlue"
                android:text="Hee Hitler"
                android:textColor="#fafafa" />

            <Button
                android:id="@+id/btnStinkBek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Snel een beetje met je"
                android:textColor="#fafafa"
                android:background="@color/colorBlue"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <Button
                android:id="@+id/btnHoerenPaard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lekker op je paard gereden"
                android:textColor="#fafafa"
                android:background="@color/colorLightBlue"
                android:layout_marginBottom="5dp"
                />

            <Button
                android:id="@+id/btnTikTakkie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tik tik takkie"
                android:textColor="#fafafa"
                android:background="@color/colorBlue"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
